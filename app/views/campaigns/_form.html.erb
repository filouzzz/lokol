<%= simple_form_for [@company, @campaign] do |f| %>
  <h2>Campaign Objective</h2>
  <%= f.input :campaign_name %>
  <%= f.input :campaign_objective, collection: ['LINK_CLICKS', 'APP_INSTALLS', 'IMPRESSIONS', 'OFFER_CLAIMS', 'PAGE_LIKES', 'POST_ENGAGEMENT', 'VIDEO_VIEWS', 'TWO_SECOND_CONTINUOUS_VIDEO_VIEWS', 'COMPLETED_VIDEO_VIEWS', 'VIDEO_VIEWS_15S'], selected: 1 %>

  <h2>Campaign Adset</h2>
  <%= f.input :adset_name %>
  <%= f.input :adset_start_date %>
  <%= f.input :adset_end_date %>
  <%= f.input :adset_bid_amount %>
  <%= f.input :adset_billing_event, collection: ['LINK_CLICKS', 'APP_INSTALLS', 'IMPRESSIONS', 'OFFER_CLAIMS', 'PAGE_LIKES', 'POST_ENGAGEMENT', 'VIDEO_VIEWS', 'TWO_SECOND_CONTINUOUS_VIDEO_VIEWS', 'COMPLETED_VIDEO_VIEWS', 'VIDEO_VIEWS_15S'], selected: 1 %>
  <%= f.input :adset_daily_budget %>

  <h2>Campaign Ad infos</h2>
  <%= f.input :ad_creative_object_story_spec_plink_data_message %>
  <%= f.input :company_id %>
  <%= f.input :created_at %>
  <%= f.input :updated_at %>
  <%= f.input :photos %>
  <%= f.input :fb_campaign_id %>
  <%= f.input :ad_status %>
  <%= f.input :ad_name %>
  <%= f.input :ad_adset_id %>
  <%= f.input :ad_creative_object_story_spec_page_id %>
  <%= f.input :ad_creative_object_story_spec_plink_data %>
  <%= f.submit 'campaign_message', class: "btn btn-primary" %>
<% end %>


