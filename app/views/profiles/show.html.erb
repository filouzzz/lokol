<h1><%= @profile.first_name.capitalize %>: Profile </h1>

<ul>

  <li>Last Name: <%= @profile.last_name %></li>
  <li>Street Name: <%= @profile.street %></li>
  <li>Street Number: <%= @profile.street_number %></li>
  <li>Zip Code: <%= @profile.zip_code %></li>
  <li>City: <%= @profile.city %></li>
  <li><%= @profile.avatar %></li>
  <li>Country: <%= @profile.country %></li>
  <li>
    <% if @profile.avatar? %>
      <%= cl_image_tag @profile.avatar.path %>
    <% end %>
  </li>
</ul>

<%= link_to "Update Profile", edit_profile_path(current_user.profile), class: "btn rounded-camp" %>
<% if current_user.companies.empty? %>
  <%= link_to "Add company", new_company_path, class: "btn rounded-camp" %>
<% else %>
  <%= link_to "Company", '/companies', class: "btn rounded-camp" %>
<% end %>


